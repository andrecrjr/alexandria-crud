{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"] // o alias '@' aponta para a pasta 'src'
    },
    "types": ["node"]
  },
  "include": ["vite.config.ts"],
}
